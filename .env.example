MAIL_FROM_NAME="${APP_NAME} Mail" # Example using another env var

# --------------------------------------------------------------------------
# Maintenance Mode
# --------------------------------------------------------------------------
# MAINTENANCE_MODE: 'true' to activate, 'false' or empty to deactivate.
# ALLOWED_MAINTENANCE_IPS: Comma-separated list of IPs allowed to bypass maintenance.
# MAINTENANCE_BYPASS_TOKEN: A secret token to bypass maintenance via query param (optional).

HEADERS_X_POWERED_BY_ENABLED=true

MAINTENANCE_MODE=false
# ALLOWED_MAINTENANCE_IPS="127.0.0.1,::1,YOUR_DEVELOPMENT_IP"
